# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES=1800

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/beholder_dev
DB_NAME=beholder_dev
DB_USER=postgres
DB_PWD=your-password
DB_HOST=localhost
DB_PORT=5432
DB_LOGS=false

# AES Encryption (32 characters)
AES_KEY=your-32-character-aes-encryption-key

# CORS Configuration
CORS_ORIGIN=*

# Logging Configuration
BINANCE_LOGS=false
BEHOLDER_LOGS=false
AGENDA_LOGS=false

# Automation Configuration
AUTOMATION_INTERVAL=60000

# Default Settings
DEFAULT_SETTINGS_ID=1
DEFAULT_SETTINGS_EMAIL=your-email@example.com
DEFAULT_SETTINGS_PWD=your-password

# Binance API Configuration
DEFAULT_SETTINGS_ACCESS_KEY=your-binance-api-key
DEFAULT_SETTINGS_SECRET_KEY=your-binance-secret-key
BINANCE_SAPI_URL=https://api.binance.com/sapi/v1/

# Market Configuration
INCOMPLETE_CANDLES=false
BINANCE_BLVT=false
IGNORED_COINS=AUD,GBP,EUR,NGN,RUB,UAH,TRY,BKRW,BIDR,ZAR,BVND

# Risk Management
MAX_POSITION_SIZE=0.1
MAX_DAILY_LOSS=0.05
RISK_FREE_RATE=0.02

# Paper Trading
PAPER_TRADING=false
PAPER_BALANCE=10000

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_ENABLED=false

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100